!!! 5
%html{:lang => "en"}
  %head
    %title 2nd City Zoning
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}

    / Styles
    = include_stylesheet "bootstrap.readable.min"
    = include_stylesheet "bootstrap-responsive"
    = include_stylesheet :custom
    = include_stylesheet "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css"
    = content :stylesheets

    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script type="text/javascript" src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  %body
    .navbar
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => '/'}
            %img{:src => '/images/logo.png', :alt => '2nd City Zoning'}
          %p.navbar-text.pull-left
            An
            %a{:href => 'http://opencityapps.org'} Open City
            app

          .container.nav-collapse
            %ul.nav.pull-right
              %li{:class => current_menu_class("home")}
                %a{:href => "/"} Home
              %li{:class => current_menu_class("about")}
                %a{:href => "/about"} About
              %li{:class => current_menu_class("zones")}
                %a{:href => "/zones"} Zone definitions

    .container-fluid

      = yield

    = include_javascript :jquery
    = include_javascript :bootstrap
    = content :javascripts

    = include_javascript :"jquery.ba-hashchange" if production?
    = include_javascript :"analytics_lib" if production?